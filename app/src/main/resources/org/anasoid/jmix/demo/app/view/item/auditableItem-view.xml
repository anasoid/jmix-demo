<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://auditableItemView.title" extends="org/anasoid/jmix/demo/app/view/item/item-view.xml">
    <layout expand="contentBox">
        <vbox id="contentBox" classNames="overflow-auto">
            <tabSheet width="100%">
                <tab id="mainTab" label="Main">
                    <vbox id="mainTabContent"/>
                </tab>
                <tab id="administrationTab" label="Administration">
                    <vbox id="administrationTabContent">
                        <formLayout id="item" dataContainer="itemDc">
                            <textField id="pkField" label="pk" property="pk" readOnly="true" required="false"
                                       datatype="long"/>
                            <details summaryText="Audit" colspan="3" opened="true" themeNames="filled">
                                <hbox id="auditItemMain">
                                    <textField id="createdDateField" property="createdDate" readOnly="true"
                                               datatype="dateTime"/>
                                    <textField id="lastModifiedDateField" property="lastModifiedDate"
                                               readOnly="true"
                                               datatype="dateTime"/>
                                    <textField id="revisionField" property="revision" readOnly="true"
                                               datatype="int"/>
                                </hbox>
                            </details>

                        </formLayout>
                    </vbox>
                </tab>
            </tabSheet>
        </vbox>
    </layout>
</view>