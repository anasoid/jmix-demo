<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://auditableItemView.title" extends="org/anasoid/jmix/demo/app/view/item/item-view.xml">
    <layout expand="contentBox">
        <vbox id="contentBox" classNames="overflow-auto">
            <formLayout id="item" dataContainer="itemDc">
                <hbox id="itemMain">
                    <textField id="pkField" property="pk" readOnly="true" required="false" datatype="long"/>
                    <details summaryText="audit" colspan="3" opened="false">
                        <hbox id="auditItemMain">
                            <textField id="createdDateField" property="createdDate" readOnly="true"
                                       datatype="dateTime"/>
                            <textField id="lastModifiedDateField" property="lastModifiedDate" readOnly="true"
                                       datatype="dateTime"/>
                            <textField id="revisionField" property="revision" readOnly="true" datatype="int"/>

                        </hbox>
                    </details>
                </hbox>
            </formLayout>
        </vbox>
    </layout>
</view>